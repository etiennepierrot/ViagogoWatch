@model dynamic

@{
    ViewBag.Title = "Create event to check";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="container">

    <form class="form-horizontal" action="Create" method="POST">
        <h2>Create event to check</h2>
        <div class="form-group">
            <label for="url">Url of the viagogo event to check</label>
            <input type="url" id="url" name="url" class="form-control" placeholder="url" required autofocus>
        </div>
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" class="form-control" placeholder="name" required>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Create Event</button>
    </form>

</div>

